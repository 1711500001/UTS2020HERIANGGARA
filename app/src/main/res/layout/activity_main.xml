<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN PAGE"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:padding="20px"
            android:textColor="#fff"
            android:background="@drawable/radius_background_bottom"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="35dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="20sp"
                android:textColor="#18AEA1"
                />
            <EditText
                android:id="@+id/txtU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="20sp"
                android:textColor="#18AEA1"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/txtP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/radius_background_button"
                android:text="LOGIN"
                android:textSize="20sp"
                app:backgroundTint="@color/teal_200" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Or"
                android:textStyle="italic|bold"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#CF1A1A"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10px"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_background_button"
                android:text="Register"
                android:textSize="20sp"
                app:backgroundTint="@color/teal_200" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright Heri Anggara"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="23sp"
            android:padding="20px"
            android:textColor="#fff"
            android:background="@drawable/radius_background_top"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>